@model IEnumerable<CrudEmissoras.Models.Audiencia>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="CriarAudiencia">Criar Audiencia</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Buscar por nome emissora: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Retorne para a lista completa</a>
        </p>
    </div>
    <div class="row">
        <div class="form-actions no-color">

            <label for="firstDate" class="control-label">Data inicio audiencias:</label>
            <input type="date" name="firstDate" value="@ViewData["FirstDateFilter"]" />

            <label for="lastDate" class="control-label">Data fim audiencias:</label>
            <input type="date" name="lastDate" value="@ViewData["LastDateFilter"]" />
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PointsSortParm"]">@Html.DisplayNameFor(model => model.Pontos_audiencia)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Data_hora_audiencia)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.NomeEmissora)</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pontos_audiencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_hora_audiencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEmissora)
            </td>
            <td>
                <a asp-action="AtualizarAudiencia" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="ExcluirAudiencia" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
